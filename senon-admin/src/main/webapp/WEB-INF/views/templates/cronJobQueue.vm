<ol class="breadcrumb">
  <li><a href="#">Home</a></li>
  <li class="active">Job</li>
  <li class="active">Cron Task</li>
</ol>
<div class="form form-inline">
	<input class="form-control" name="taskId" placeholder="Task ID">
	<button class="btn btn-primary" id="search">Search</button>
</div>

<div class="table-responsive" id="jobtable-container">
	
</div>
<script id="ltstable" type="text/html">
    <table class="table" data-page-size="10">
        <thead>
        <tr>
            <th data-toggle="true">#</th>
            <th data-hide="all">提交组</th>
            <th>执行节点</th>
            <th>表达式</th>
            <th>自依赖</th>
            <th data-hide="all">优先级</th>
            <th data-hide="all">最大重试次数</th>
            <th data-hide="phone,tablet">反馈</th>
            <th data-hide="phone,tablet">创建时间</th>
            <th data-hide="all">修改时间</th>
            <th>操作</th>
        </tr>
        </thead>
        <tbody>
        {{each rows as row index}}
        <tr>
            <td>{{row.taskId}}</td>
            <td>{{row.submitNodeGroup}}</td>
            <td>{{row.taskTrackerNodeGroup}}</td>
            <td>{{row.cronExpression}}</td>
            <td>{{row.relyOnPrevCycle | format:'formatRelyOnPrevCycle',row}}</td>
            <td>{{row.priority}}</td>
            <td>{{row.maxRetryTimes}}</td>
            <td>{{row.needFeedback | format:'needFeedbackLabel',row}}</td>
            <td>{{row.gmtCreated | dateFormat:'yyyy-MM-dd HH:mm:ss'}}</td>
            <td>{{row.gmtModified | dateFormat:'yyyy-MM-dd HH:mm:ss'}}</td>
            <td>{{row.opt | format:'optFormat',row}}</td>
        </tr>
        {{/each}}
        {{if results == 0}}
        <tr>
            <td colspan="11">
            	<div class="alert alert-warning">No anydata!</div>
            </td>
        </tr>
        {{/if}}
        </tbody>
        <tfoot>
        <tr>
            <td colspan="11">
                <ul class="pagination pagination-sm pull-right"></ul>
            </td>
        </tr>
        </tfoot>
    </table>
</script>
<script type="text/javascript" src="statics/js/job/cron-job-queue.js?v=1.0"></script>